{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"outDir": "./build",
		"target": "ES2023",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2023"
		],
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"**/svn",
		"**/build",
		"**/node_modules",
		"**/assets",
		"**/scripts"
	]
}