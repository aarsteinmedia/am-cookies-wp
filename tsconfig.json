{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"outDir": "./build",
		"target": "ES2022",
		"jsx": "react-jsx",
		"module": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ES2021", "ESNext"],
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./src/**/*"],
	"exclude": [
		"**/svn",
		"**/build",
		"**/node_modules",
		"**/assets",
		"**/scripts"
	]
}
